@page
@model CRUD_C_.Pages.Products.Create
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p4">
        <h2 class="text-center mb-5">Novo Produto</h2>

        @if(Model.ErrorMessage.Length > 0){
            <div class="=alert alert-danger alert-dismissible fade show" role="=alert">
                <strong>@Model.ErrorMessage</strong>
                <button type="=button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nome do Produto</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="productName">
                    <span asp-validation-for="productName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nome da Empresa</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="enterpriseName">
                    <span asp-validation-for="enterpriseName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email da Empresa</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="email">
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Telefone da Empresa</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="phone">
                    <span asp-validation-for="phone" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Quantidade do produto</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="amont">
                    <span asp-validation-for="amont" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
                <div class="col col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Products/Index" role="button">Cancelar</a>
                </div>
            </div>

        </form>
    </div>
</div>